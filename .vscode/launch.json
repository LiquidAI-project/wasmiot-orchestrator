{
    "configurations": [
        {
            "name": "Docker Node.js Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "node",
            "node": {
                "package": "${workspaceFolder}/fileserv/package.json",
                "localRoot": "${workspaceFolder}/fileserv"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Docker: Debug server",
            "remoteRoot": "/app",
            "port": 9229
        }
    ]
}